generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // or "mysql"
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  name      String?
  columns   Column[]  @relation("UserColumns")
  cards     Card[]    @relation("UserCards")
  comments  Comment[] @relation("UserComments")
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model Column {
  id        Int      @id @default(autoincrement())
  title     String
  position  Float    @default(0)
  user      User     @relation("UserColumns", fields: [userId], references: [id])
  userId    Int
  cards     Card[]   @relation("ColumnCards")
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model Card {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  position    Float     @default(0)
  column      Column    @relation("ColumnCards", fields: [columnId], references: [id])
  columnId    Int
  user        User      @relation("UserCards", fields: [userId], references: [id])
  userId      Int
  comments    Comment[] @relation("CardComments")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime?
}

model Comment {
  id        Int      @id @default(autoincrement())
  text      String
  card      Card     @relation("CardComments", fields: [cardId], references: [id])
  cardId    Int
  user      User     @relation("UserComments", fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updatedAt DateTime?
}
